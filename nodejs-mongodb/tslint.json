{
  "rules": {
    "max-line-length": [true, 120],
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": [true],
    "no-console": false,
    "no-duplicate-variable": true,
    "curly": true,
    "no-empty-interface": true,
    "no-invalid-this": false,
    "no-switch-case-fall-through": true,
    "triple-equals": true,
    "class-name": true,
    "prefer-template": true,
    "semicolon": [true],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-type-operator",
      "check-preblock"
    ]
  },
  "linterOptions": {
    "exclude": ["*.json", "**/*.json"]
  }
}
